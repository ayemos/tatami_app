= form_for @dataset, url: datasets_path(@dataset, type: 's3_dataset') do |f|
  .form-group
    %label.col-md-4.control-label{for: "name"}
      Name (unique)
    = f.text_field :name, class: 'form-control'
  .form-group#s3_dataset-form
    %label.col-md-4.control-label{for: "bucket_name"} Bucket Name
    = f.text_field :bucket_name, class: 'form-control'
    %label.col-md-4.control-label{for: "prefix"} Prefix
    = f.text_field :prefix, class: 'form-control'
    = f.hidden_field :type, value: 's3_dataset'
  .form-group
    = f.submit 'Create', class: 'btn btn-primary'
