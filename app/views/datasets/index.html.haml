.page-header
  .container
    .row
      .col-sm-8.col-xs-12
        %h1
          Datasets
      .col-sm-4.col-xs-12
        .dropdown
          %button#new-dataset-dropdown.btn.btn-secondary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            Create new Dataset
          .dropdown-menu{"aria-labelledby" => "new-dataset-dropdown"}
            = link_to 'S3 Dataset', new_s3_dataset_path,
              class: 'dropdown-item'
            = link_to 'Redshift Dataset', new_redshift_dataset_path,
              class: 'dropdown-item'
.container
  .row
    .card-columns
      - @datasets.each do |dataset|
        = render "#{dataset.type.underscore}_card", dataset: dataset
